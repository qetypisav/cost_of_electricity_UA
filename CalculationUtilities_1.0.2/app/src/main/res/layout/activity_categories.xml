<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/categoriesScrollLL">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCategory1"
                android:textColor="@color/colorBlack"
                android:textSize="10pt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCategory2"
                android:textColor="@color/colorBlack"
                android:textSize="10pt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCategory3"
                android:textColor="@color/colorBlack"
                android:textSize="10pt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCategory4"
                android:textColor="@color/colorBlack"
                android:textSize="10pt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCategory5"
                android:textColor="@color/colorBlack"
                android:textSize="10pt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCategory6"
                android:textColor="@color/colorBlack"
                android:textSize="10pt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCategory7"
                android:textColor="@color/colorBlack"
                android:textSize="10pt"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnClickBackToMainCalculate"
                android:id="@+id/btnClickBackToMainCalculateCategories"
                android:text= "@string/back_to_calculate"
                style="@style/AllButtons"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>